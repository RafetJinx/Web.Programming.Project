@model IEnumerable<WebProject.Models.SummonerChampionMastery>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Champion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChampionPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastPlayTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChestGranted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TokensEarned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summoner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Champion.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChampionLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChampionPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPlayTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChestGranted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TokensEarned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summoner.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChampionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChampionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChampionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
